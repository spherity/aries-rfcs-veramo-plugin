{
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "jsonld"
  ],
  "collectCoverage": false,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!**/types/**",
    "!**/build/**",
    "!**/node_modules/**"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "json"
  ],
  "coverageProvider": "v8",
  "coverageDirectory": "./coverage",
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "testMatch": [
    "**/__tests__/**/*.test.*"
  ],
  "transform": {
    "^.+\\.m?tsx?$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": "./tsconfig.json"
      }
    ]
  },
  "testEnvironment": "node",
  "automock": false
}
